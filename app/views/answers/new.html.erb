<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
      <% if current_user.teacher || @test.private == true %>
        <%= simple_form_for [@test, @answer] do |f| %>
          <% @question.each do |q| %>
            <h4><%= q %></h4>
            <%= f.input :answer, label: false, value: "resposta" %>

          <% end %>
          <%= f.submit "Enviar", class:"btn btn-primary" %>
        <% end %>
      <% else %>
        <h4>Você não tem autorização para acessar essa página</h4>
      <% end %>
      <%= render 'shared/footer' %>
    </div>
  </div>
</div>
