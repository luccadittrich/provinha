<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <% if current_user.teacher %>
        <%= simple_form_for @test do |f| %>
          <p>Semana <%= @test.id %> </p>
          <% if @test.private %>
            <p style="color: green;">Este teste está aberto</p>
          <% else %>
            <p style="color: red;">Este teste está fechado</p>
          <% end %>
          <%= f.input :question1, label: false, placeholder: "Pergunta 1" %>
          <%= f.input :question2, label: false, placeholder: "Pergunta 2" %>
          <%= f.input :question3, label: false, placeholder: "Pergunta 3" %>
          <%= f.input :question4, label: false, placeholder: "Pergunta 4" %>
          <div class="d-flex">
            <p class="m-0">Aberto?</p>
            <%= f.check_box :private, class: "check-box" %>
          </div>
          <%= f.submit "Editar", class:"btn btn-primary" %>
        <% end %>
      <% else %>
        <h4>Você não tem autorização para acessar essa página</h4>
      <% end %>
      <%= render 'shared/footer' %>
    </div>
  </div>
</div>
